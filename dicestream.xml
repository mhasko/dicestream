<?xml version="1.0" encoding="UTF-8" ?>
<Module>
        <ModulePrefs title="Dicestream">
                <Require feature="rpc" />
                <Require feature="views" />
        </ModulePrefs>
        <Content type="html"><![CDATA[     

<html>
<head>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
	<script type="text/javascript" src="https://hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.2" ></script>
	<script type="text/javascript" src="https://commondatastorage.googleapis.com/dicestream/minicolors/jquery.miniColors.js"></script>
	<script type="text/javascript" src="https://commondatastorage.googleapis.com/dicestream/multiaccordion/jquery.multi-accordion-1.5.3.js"></script>

	<script src="https://commondatastorage.googleapis.com/dicestream/dicestream.js"></script>
	<!--script src="https://dl.dropbox.com/u/1177409/dicestream/dicestream.js"></script-->

</head>
<body>
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Overlock" />
<link rel="stylesheet" type="text/css" href="https://commondatastorage.googleapis.com/dicestream/minicolors/jquery.miniColors.css"/>
<link rel="stylesheet" type="text/css" href="https://commondatastorage.googleapis.com/dicestream/bootstrap/css/bootstrap.css" />

<link rel="stylesheet" type="text/css" href="https://commondatastorage.googleapis.com/dicestream/dicestream.css" />
<!--link rel="stylesheet" type="text/css" href="https://dl.dropbox.com/u/1177409/dicestream/dicestream.css" /-->
<div id="canvasDiv" class="disabled">
	<canvas height="32px" width="32px" id="layoverCanvas"></canvas>
	<canvas height="70px" width="200px" id="textCanvas"></canvas>
</div>
<div id="app-gui">
<div class="slider-frame">
	<span class="slider-title">Dice</span>
	<span class="slider-button" onClick="toggleDiv('diceDiv')"><i class="icon-circle-arrow-down"></i></span>
</div>
<div id="diceDiv" class="groupDiv">
	<div class='row'>
		<span class='leftDice'>
			<input class="button btn btn-mini" type="button" value="-" id="d4minus" onClick="minus('d4count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d4-4.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d4add" onClick="add('d4count', 9)"/>
			<span id="d4count" class="dieCount label">0</span>
		</span>

		<span class='rightDice'>
			<input class="button btn btn-mini" type="button" value="-" id="d10minus" onClick="minus('d10count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d10-10.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d10add"  onClick="add('d10count', 9)"/>
			<span id="d10count" class="dieCount label">0</span>
		</span>
	</div>

	<div class='row'>
		<span class='leftDice'>
			<input class="button btn btn-mini" type="button" value="-" id="d6minus" onClick="minus('d6count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d6-6.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d6add" onClick="add('d6count', 9)"/>
			<span id="d6count" class="dieCount label">0</span>
		</span>

		<span class='rightDice'>

			<input class="button btn btn-mini" type="button" value="-" id="d12minus" onClick="minus('d12count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d12-12.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d12add" onClick="add('d12count', 9)"/>
			<span id="d12count" class="dieCount label">0</span>
		</span>
	</div>

	<div class='row'>
		<span class='leftDice'>
			<input class="button btn btn-mini" type="button" value="-" id="d8minus" onClick="minus('d8count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d8-8.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d8add" onClick="add('d8count', 9)"/>
			<span id="d8count" class="dieCount label">0</span>
		</span>
		
		<span class='rightDice'>
			<input class="button btn btn-mini" type="button" value="-" id="d20minus" onClick="minus('d20count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d20-20.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d20add" onClick="add('d20count', 9)"/>
			<span id="d20count" class="dieCount label">0</span>
		</span>		
	</div>
	
	<div class='row'>
		<span class='leftDice'>
			<input class="button btn btn-mini" type="button" value="-" id="dfminus" onClick="minus('d3count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d3-2.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="dfadd" onClick="add('d3count', 9)"/>
			<span id="d3count" class="dieCount label">0</span>
		</span>
		<span class='rightDice disabled'>
			<input class="button btn btn-mini" type="button" value="-" id="d100minus" onClick="minus('d100count', 0)"/>
			<span class='rolledDice'><img src="https://commondatastorage.googleapis.com/dicestream/images/standard/d100-100.png"/></span>
			<input class="button btn btn-mini" type="button" value="+" id="d100add" onClick="add('d100count', 9)"/>
			<span id="d100count" class="dieCount label">0</span>
		</span>
	</div>

	<div class='row'>
		<span class='leftDice disabled'>
			Current Total <span class='diceSum label' id="diceTotal">0</span>
		</span>

		<span class='rightDice'>
			<input class="button btn btn-primary" type="button" value="Roll" id="roll" onClick="rollDiceButton()" />
			<input class="button btn btn-primary" type="button" value="Clear" id="clear" onClick="clearDiceButton()" />
		</span>
	</div>
	<div id="plotPointDiv" class='row'>
		<span id="plotPointSpan" class='leftDice'>
			<input id="ppcolor" type="minicolors" data-textfield="false" data-default="#000000" />
			<input type="checkbox" id="togglePP" onClick="togglePPAction(this)" checked="checked"/>
			<span id="ppname" class="button">Counter</span>
			<input class="button btn btn-mini" type="button" value="-" id="ppminus" onClick="ppminus()"/>
			<input class="button btn btn-mini" type="button" value="+" id="ppadd" onClick="ppadd()"/>		
			<span id="ppcount" class="dieCount label">1</span>
		</span>
	</div>
</div>

<div class="slider-frame">
	<span class="slider-title">Rolled Dice</span>
	<span class="slider-button" onClick="toggleDiv('rolledDiceDiv')"><i class="icon-circle-arrow-down"></i></span>
</div>
<div id="rolledDiceDiv" class="groupDiv">
</div>

<div class="slider-frame">
	<span class="slider-title">Text Overlays</span>
	<span class="slider-button" onClick="toggleDiv('stringDiv')"><i class="icon-circle-arrow-down"></i></span>
</div>
<div id="stringDiv" class="groupDiv">
	<input type="text" id="txtField" />
	<input class="button btn btn-success" type="button" value="Text" id="textbtn" onClick="makeText(txtField.value)"/>
	<div id="screenStringsDiv"><ol id="stringList"></ol></div>
</div>

<div class="slider-frame">
	<span class="slider-title">Settings</span>
	<span class="slider-button" onClick="toggleDiv('settingsDiv')"><i class="icon-circle-arrow-down"></i></span>
</div>
<div id="settingsDiv" class="groupDiv">
	<div id="selectionColors">
		<span id="selectedColor">
			<input id="selectedcolorselect" type="minicolors" data-textfield="false" data-default="#00ff00" />
			<input type="checkbox" id="toggleCircle" onClick="toggleSelectionAction(this)" checked="checked" class="button"/>Circle Color<br/>
		</span>
		<span id="effectColor">
			<input id="effectcolorselect" type="minicolors" data-textfield="false" data-default="#000000" />
			<input type="checkbox" id="toggleHex" onClick="toggleSelectionAction(this)" checked="checked" class="button"/>Hex Color<br/>
		</span>
		<span id="xColor">
			<input id="xcolorselect" type="minicolors" data-textfield="false" data-default="#ff0000" />
			<input type="checkbox" id="toggleX" onClick="toggleSelectionAction(this)" checked="checked" class="button"/>X Color<br/>
		</span>
	</div>	
	<!--div>
		<select onchange="selectDiceAction()" id="selectDieSet"><option value="/marvel">Marvel Dice</option><option value="/real">Real Dice</option></select>
	</div-->
</div>
<div class="slider-frame">
	<span class="slider-title">Lower Third</span>
	<span class="slider-button" onClick="toggleDiv('lowerThird')"><i class="icon-circle-arrow-down"></i></span>
</div>
<div id="lowerThird">
	<input class="lower3rdtextfield" type="text" id="lower3rdmain" /><span class="lower3rdtitle">Main title</span><br/>
	<input class="lower3rdtextfield" type="text" id="lower3rdsec" /><span class="lower3rdtitle">Sub title</span><br/>
	<input type="minicolors" id="lower3rdsecselect" data-textfield="false" data-default="#00ff00" />
	<input class="button btn" type="button" value="Create" id="3rdbtn" onClick="makeLower3rd(lower3rdmain.value, lower3rdsec.value)" />
	<input type="checkbox" id="toggle3rd" onClick="toggle3rdAction(this)" />Show/Hide Lower Third<br/>
</div>
<div id="spacer"></div>
</div>

</body>
]]>
</Content>
</Module>